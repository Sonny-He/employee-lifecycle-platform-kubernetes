# ----------------------------------------------------------------------------
# IAM Role for Employee Portal Service Account (IRSA)
# ----------------------------------------------------------------------------
data "aws_iam_policy_document" "employee_portal_assume" {
  statement {
    effect  = "Allow"
    actions = ["sts:AssumeRoleWithWebIdentity"]

    principals {
      type        = "Federated"
      identifiers = [aws_iam_openid_connect_provider.eks.arn]
    }

    condition {
      test     = "StringEquals"
      variable = "${replace(aws_iam_openid_connect_provider.eks.url, "https://", "")}:sub"
      values   = ["system:serviceaccount:employee-services:employee-portal-sa"]
    }

    condition {
      test     = "StringEquals"
      variable = "${replace(aws_iam_openid_connect_provider.eks.url, "https://", "")}:aud"
      values   = ["sts.amazonaws.com"]
    }
  }
}

resource "aws_iam_role" "employee_portal_sa" {
  name               = "${var.project_name}-employee-portal-sa"
  assume_role_policy = data.aws_iam_policy_document.employee_portal_assume.json

  tags = merge(
    var.cs3_tags,
    {
      Name        = "${var.project_name}-employee-portal-sa-role"
      Environment = var.environment
    }
  )
}

